<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Add User</h3>
  </div>
  <div class="panel-body">
    <form method="POST" action="/addUser">
      <div class="form-group">
        <% if (errors) { %>
          <div class="form-group has-danger">
            <label class="form-control-label" for="inputDanger1">LDAP</label>
            <input type="text" name="ldap" class="form-control form-control-danger" id="inputDanger1">
            <div class="form-control-feedback">Sorry, that LDAP exists. Try another?</div>
            <small class="form-text text-muted">Check the <a href="/">ratings page</a> to see all existing LDAPs.</small>
          </div>
        <% } else { %>
          <div class="form-group">
            <label class="form-control-label">LDAP</label>
            <input type="text" name="ldap" class="form-control form-control-danger">
          </div>
        <% } %>
      </div>

      <button type="submit" class="btn btn-default">Add User</button>
    </form>
  </div>
</div>
